{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"jsx": "react",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"module": "commonjs",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"sourceMap": true,
		"strictPropertyInitialization": false,
		"typeRoots": [
			"node_modules/@types"
		],
	},
	"include": ["source"]
}
